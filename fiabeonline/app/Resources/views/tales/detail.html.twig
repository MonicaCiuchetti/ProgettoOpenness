{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <h3 align="center">{{ tale.taleTitle }}</h3>
        </div>
        <div class="col-sm-4">
            <h3 align="center">Carte</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3">
            <div class="container-fluid">
                <button class="btn btn-link"><a href="classic.html.twig">Visualizza senza sequenze</a></button>
                <h3>Dettagli</h3>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <p>Autore: {{ tale.user.username }}</p>
                        <p>Likes: {{ tale.likes.count() }}</p>
                        <p>Data Creazione: {{ tale.taleDate | date('Y-m-d H:i:s') }}</p>
                        <p>Punteggio: {{ tale.taleScore }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-1"></div>
        {# fasi fiabe #}
        <div class="col-sm-4">
            {% for sequence in sequences %}
                <div class="verticaltext">Sequenza {{ sequence.seqOrder }}</div>
                <div class="container-fluid">
                    <div class="jumbotron">
                        {{ sequence.seqText }}
                    </div>
                </div>
            {% endfor %}
        </div>

        {#slide show carte #}
        <div class="col-sm-4">
            <div class="container-fluid">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                <div class="item active">
                                    <img src="{{ asset('bundles/framework/images/carta1.jpg') }}" alt="carta1">
                                </div>

                                <div class="item">
                                    <img src="{{ asset('bundles/framework/images/carta2.jpg') }}" alt="carta2">
                                </div>
                            </div>
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}