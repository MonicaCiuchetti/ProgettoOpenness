{# app/Resources/FOSUserBundle/views/Resetting/request.html.twig #}
{% extends 'base.html.twig' %}
{% block header %}
    <div class="container">    
        <div id="headerbox" style="margin-top:50px;" class="mainbox col-md-2 col-md-offset-5 col-sm-2 col-sm-offset-5">
            <a href="{{ path('homepage') }}">
                  <img class="media-object" src="{{ asset('logo_90_180.png') }}">
            </a>
        </div>
    </div>
{% endblock %}
{% block body %}
{% trans_default_domain 'FOSUserBundle' %}
<div class="container">    
        <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="panel-title">Modifica la password</div>
                            <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="{{ path('fos_user_security_login') }} }} ">Sign In</a></div>
                        </div>

                        <div style="padding-top:30px" class="panel-body" >
                            <form id="signupform" class="form-horizontal" action="{{ path('fos_user_resetting_send_email') }}" method="post" role="form">
                                 {% if invalid_username is defined %}
                                    <div class="alert alert-dismissible alert-danger" role="alert"><button type="button" class="close" data-dismiss="alert">&times;</button>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>
                                {% endif %}
                                <div class="form-group">
                                    <label for="username" class="col-md-4 control-label">{{ 'resetting.request.username'|trans }}</label>
                                    <div class="col-md-8">
                                        <input type="username" class="form-control" name="username" placeholder="Username o email" required="required">
                                    </div>
                                </div>
                                
                                
                                <div class="form-group">                                  
                                    <div class="col-md-offset-2 col-md-8">
                                        <button id="btn-signup" type="submit" class="btn btn-success"><span class="glyphicon glyphicon-user"></span> {{ 'resetting.request.submit'|trans }}</button>

                                    </div>
                                </div>
                                
                            </form>
                         </div>
                    </div>
                
         </div> 
    </div>


{% endblock %}
