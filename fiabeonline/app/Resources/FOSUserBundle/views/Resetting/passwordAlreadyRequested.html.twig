{# app/Resources/FOSUserBundle/views/Resetting/passwordAlreadyRequested.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}

	<div class="container">    
		<div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">Attenzione!</div>
                    <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="{{ path('fos_user_security_login') }} }} ">Sign In</a></div>
                </div>

                     <div style="padding-top:30px" class="panel-body" >
                     <div id="signupalert" class="alert alert-warning">
                        {% block fos_user_content %}
                        {% trans_default_domain 'FOSUserBundle' %}
							<p>{{ 'resetting.password_already_requested'|trans }}</p>
						{% endblock fos_user_content %}
                     </div>
                </div>
            </div>
		
		</div>
	</div>


{% endblock %}

