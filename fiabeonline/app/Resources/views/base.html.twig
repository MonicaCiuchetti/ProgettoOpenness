<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}FiabeOnLine{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}">
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body id="{% block body_id %}{% endblock %}">
            {% block header %}
                <header>
                     <div class="navbar navbar-default navbar-static-top" role="navigation">
                        <div class="container">
                            <div class="navbar-header">
                                 <!-- aggiugnere logo -->
                                <a class="navbar-brand" href="{{ path('homepage') }}">
                                    FiabeOnLine
                                </a>

                                <button type="button" class="navbar-toggle"
                                        data-toggle="collapse"
                                        data-target=".navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav navbar-right">
                                    <!--sezione registrazione e login-->
                                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                                     <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                                     <!--fine login-->
                                    <!--da rivdere dopo la gestione degli utenti-->
                                    {% if app.user %}
                                        <li>
                                            <a href="{{ path('security_logout') }}">
                                                <i class="fa fa-sign-out"></i> {{ 'menu.logout'|trans }}
                                            </a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>

                </header> 
            {% endblock %}
            {% block body %}{% endblock %}
            {% block footer %}
            <footer>
                <div class="container-fluid">
                    <div class="row">
                        <!-- aggiugnere logo -->
                        <div id="footer-copyright" class="col-md-6">
                            <div>
                                <p>&copy; {{ 'now'|date('Y') }} - <a href="http://www.avolta.pg.it" target="_blank">ITTS A. Volta</p></a><p>Licenza MIT</p>
                            </div>
                        </div>
                        <!-- aggiungere boostrap social o altro-->
                        <div id="footer-resources" class="col-md-5">
                            <p>
                                <a href="https://twitter.com/symfony"><i class="fa fa-twitter"></i></a>
                                <a href="https://www.facebook.com/SensioLabs"><i class="fa fa-facebook"></i></a>
                                <a href="http://symfony.com/blog"><i class="fa fa-rss"></i></a>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
            <script src="{{ asset('js/jquery.js') }}"></script>
            <!-- Include all JavaScripts, compiled by Assetic -->
            <script src="{{ asset('js/bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>
