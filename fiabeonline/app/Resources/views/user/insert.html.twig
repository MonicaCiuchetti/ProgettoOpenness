{# app/Resources/views/user/insert.html.twig #}
{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <link rel="stylesheet" href="{{ asset('css/carousel.css') }}">
    <link rel="stylesheet" href="{{ asset('css/animate.min.css') }}">
{% endblock %}
{% block javascripts %}
            <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
            <script src="{{ asset('js/jquery.js') }}"></script>
            <!-- Include all JavaScripts, compiled by Assetic -->
            <script src="{{ asset('js/bootstrap.js') }}"></script>
            <script src="{{ asset('js/activate_step.js') }}"></script>
            <!--<script src="{{ asset('js/custom.js') }}"></script>-->
        {% endblock %}
{% block body %}
<div class="container-fluid">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-8"><h1 class="animated zoomIn">Inserisci la tua fiaba</h1></div>
        </div>
        <div class="row form-group">
        <div class="col-sm-offset-1 col-xs-10">
            <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                <li class="active"><a href="#step-1">
                    <h4 class="list-group-item-heading">Fase 1</h4>
                    <p class="list-group-item-text">Scegli autore, titolo, tipologia e genere</p>
                </a></li>
                <li class="disabled"><a href="#step-2">
                    <h4 class="list-group-item-heading">Fase 2</h4>
                    <p class="list-group-item-text">Scrivi la storia</p>
                </a></li>
                <li class="disabled"><a href="#step-3">
                    <h4 class="list-group-item-heading">Fase 3</h4>
                    <p class="list-group-item-text">Calcola il tuo punteggio</p>
                </a></li>
            </ul>
        </div>
	</div>
    <div class="row setup-content" id="step-1">
    	<form id="step1-form" class="form-horizontal" action="{{ path("userInsertTale") }}" method="post" role="form">
    	<div class="col-sm-offset-1 col-xs-10">
            
        	<div class="col-sm-4 well">
			    <h4>Autore</h4>
                <input type="text" id="taleAuthor" name="taleAuthor" class="form-control">
		    </div>
            <div class="col-sm-offset-1 col-sm-7 well">
                <h4>Titolo</h4>
                <input type="text" id="taleTitle" name="taleTitle" class="form-control" required>
            </div>
		</div>
        <div class="col-sm-offset-1 col-xs-10">
            
        	<div class="col-sm-4 well">
                <h4>Tipologia</h4>
        		<!--<button id="info-type" class="btn btn-warning btn-xs info info-type"><span class='glyphicon glyphicon-info-sign'></span></button>-->
                
             {% for type in types %}
              <div class="radio">
                <label><input type="radio" id="taleTypeId" name="taleTypeId" value="{{ type.id }}" required>{{type.typeName}}</label>
              </div>
              {% endfor %}
              
            </div>
            <div class="col-sm-7 col-sm-offset-1 well">
                <h4>Genere</h4>
            	<!--<button id="info-genre" class="btn btn-warning btn-xs info info-genre"><span class='glyphicon glyphicon-info-sign'></span></button>-->
              {% for genre in genres %}
                           
                <div class="col-sm-4">
                  <div class="checkbox">
                    <label><input type="checkbox" name="taleGenreId[]" value="{{ genre.id }}">{{genre.genreName}}</label>
                  </div>
                </div>
               {% endfor %}
            </div>
        
        	   <div  class="col-sm-12"> 
                    {{ form_widget(form) }}
	           </div>
	        </div>
        </div>
      </form>
    </div>
    <div class="row setup-content" id="step-2">
        <form id="step2-form" class="form-horizontal" action="{{ path("userInsertTale") }}" method="post" role="form">
            
            <div class="col-sm-offset-1 col-xs-10">
                <div class="col-sm-4 well">
                  <label for="sequenceType" class="control-label"><h4>Scegli la sequenza</h4></label>
                  <div class="form-group">
                    <select class="form-control" id="sequenceType" name="sequenceType">
                        {% for sequenceType in sequenceTypes %}
                            <option value="{{ sequenceType.id }}"> {{ sequenceType.stName }}</option>
                        {% endfor %}
                    </select>
                  </div>
                </div>
                <div class="col-sm-offset-1 col-sm-4 well">
                     <label for="textArea" class="control-label"><h4>Inserisci il testo della sequenza</h4></label>
                        <div class="form-group">
                            <textarea id="sequenceText" name="sequenceText" class="form-control" required></textarea>
                        </div>
                </div>
             </div>
            </div>
        </form>
    </div>
    <div class="row setup-content" id="step-3">
        <div class="col-xs-12">
            <div class="col-md-12 well">
                <h1 class="text-center"> STEP 3</h1>
            </div>
        </div>
    </div>
</div>

{% endblock %}