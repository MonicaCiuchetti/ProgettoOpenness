{# app/Resources/FOSUserBundle/views/Security/login.html.twig #}
{% extends 'base.html.twig' %}
{% block header %}
    <div class="container">    
        <div id="headerbox" style="margin-top:50px;" class="mainbox col-md-2 col-md-offset-5 col-sm-2 col-sm-offset-5">
            <a href="{{ path('homepage') }}">
                  <img class="media-object" src="{{ asset('logo_90_180.png') }}">
            </a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">    
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">             
            <div class="panel panel-primary" >
                    <div class="panel-heading">
                        <div class="panel-title">Sign In</div>
                    </div>     
                    
                    <div style="padding-top:30px" class="panel-body" >
                    	<div style="float:right; font-size: 80%; position: relative; top:-20px"><a href="#">Password dimenticata?</a></div>

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                        {% if error %}
						    <div class="alert alert-danger col-sm-12">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}    
                       
                        <form id="loginform" class="form-horizontal"action="{{ path("fos_user_security_check") }}" method="post">
    						<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                    
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input id="username" type="text" class="form-control" name="_username" value="" placeholder="username" required="required" >
                                    </div>
                                
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input id="password" type="password" class="form-control" name="_password" placeholder="password"required="required" >
                                    </div>
                                
                            <div class="input-group">
                                      <div class="checkbox">
                                        <label>
                                          <input id="remember_me" type="checkbox" name="_remember_me" value="1"> Ricorda la password
                                        </label>
                                         
                                      </div>
                                    </div>

                             <div style="margin-top:10px" class="form-group">
                                <div class="col-sm-12 controls">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                    <button type="submit" class="btn btn-success" id="_submit" name="_submit">
                                        <i class="fa fa-sign-in"></i>  Login
                                    </button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-sign-in"></i>  Login with Facebook</button>

                                    </div>
                                </div>

                             <div class="form-group">
                                    <div class="col-md-12 control">
                                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                            Non sei registrato! 
                                        <a href="{{ path('fos_user_registration_register') }}">
                                            Registrati qui
                                        </a>
                                        </div>
                                    </div>
                                </div>    
                            </form>     
                        </div>                     
                    </div>  
        </div>
    </div>


{% endblock %}